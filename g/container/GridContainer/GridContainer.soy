
{namespace g.container.GridContainer.soy}


/**
 * @param context
 * @param id
 */
{template .main}
  {let $self: $context[$id] /}
  {let $denominator: $self.denominator /}
  {let $styles: $self.styles /}
  <div class="pure-g" {call g.common.soy.attribute data="all" /}>
    {if $self.children}
      {foreach $childId in $self.children}
        {let $style: $styles[index($childId)] /}
        <div class="pure-u-{$style.numerator}-{$denominator}"
             {call g.common.soy.style data="[ 'style': $style ]" /}
        >
          {call g.factory.soy.create data="[ 'context': $context, 'id': $childId ]" /}
        </div>
      {/foreach}
    {/if}
  </div>
{/template}
